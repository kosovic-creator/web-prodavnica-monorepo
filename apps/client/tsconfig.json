{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@web-prodavnica/ui/*": [
        "../../packages/ui/*"
      ],
      "@web-prodavnica/types/*": [
        "../../packages/types/*"
      ]
    },
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
